algoritmo "Triangulos"
var
   L1, L2, L3: Real
   EQ, Es, T: Logico
inicio
   Escreva("Digite um lado: ")
   Leia(L1)
   Escreva("Digite outro lado: ")
   Leia(L2)
   Escreva("Digite o 3 lado: ")
   Leia(L3)
   T <- (L1<L2+L3)e(L2<L1+L3)e(L3<L1+L2)
   EQ <- (L1=L2) e (L2=L3)
   ES <- (L1<>L2) e (L2<>L3) e (L1<>L3)
   Escreval("Pode formar um triangulo? ", T)
   Escreval("O triangulo é Equilatero? ", EQ)
   Escreva("O triangulo é Escaleno? ", ES)
fimalgoritmo
